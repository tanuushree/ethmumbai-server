generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// Users Table
// =======================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  orders    Order[]
}

// =======================
// Tickets Table
// =======================
model Ticket {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  type        String        // "earlybird" or "standard"
  price       Float
  quantity    Int
  createdAt   DateTime      @default(now())
}

// =======================
// Orders Table
// =======================
model Order {
  id          Int           @id @default(autoincrement())
  userId      Int
  totalAmount Float
  ticketCount Int
  ticketType  String        // "earlybird" or "standard"
  paymentId   String
  provider    String        // "razorpay" / "daimo"
  status      String        // pending / success / failed
  createdAt   DateTime      @default(now())
  user        User          @relation(fields: [userId], references: [id])
  orderItems  OrderTicket[]
}

// =======================
// OrderTickets Table
// =======================
model OrderTicket {
  id               Int      @id @default(autoincrement())
  orderId          Int
  participantName  String
  participantEmail String?
  createdAt        DateTime @default(now())
  order            Order    @relation(fields: [orderId], references: [id])
}
